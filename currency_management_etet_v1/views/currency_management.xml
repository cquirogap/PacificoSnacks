<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

    <record id="divisas_form" model="ir.ui.view">
        <field name="name">divisas.form</field>
        <field name="model">divisas</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Divisas">
                <xpath>
                    <h3>
                         <span>divisas</span>
                    </h3>
                    <!--<field name="trm" required="1"/>
                    <field name="fecha" required="1"/>-->
                <footer>
                    <button name="do_report" string="Generar" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
                </xpath>
            </form>
        </field>
    </record>

    <record id="divisas_action" model="ir.actions.act_window">
        <field name="name">divisas.action</field>
        <field name="res_model">divisas</field>
<!--        <field name="view_type">form</field>  -->
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="divisas_form"/>
    </record>
    
    <menuitem 
        id="menu_divisas_report"
        parent="account_reports.account_reports_partners_reports_menu"
        name="divisas"
        action="divisas_action"
        sequence="30"/>

    </data>
</odoo>