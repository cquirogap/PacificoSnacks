<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_withholding_tax_view_form" model="ir.ui.view">
        <field name="name">hr.withholding.tax.form</field>
        <field name="model">hr.withholding.tax</field>
        <field name="arch" type="xml">
            <form string="Retencion en la fuente">
                <header>
                    <button string="Approve" name="action_approve_input" type="object" states="draft" class="oe_highlight" />
                    <button string="Cancelled" name="action_cancelled_input" type="object" states="valid"  class="oe_highlight"/>
                    <button string="Cancelled" name="action_cancelled_approved_input" type="object" states="approved" class="oe_highlight"/>
                    <button string="Set to Draft"  name="action_draft_input" states="cancel" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,cancel" statusbar_colors='{"draft":"blue"}'/>
                </header>
                <sheet>
                <div class="oe_title" name="title">
                    <label for="name" class="oe_edit_only"/>
                    <h1>
                        <field name="name" placeholder="Reference" readonly="1"/>
                    </h1>
                </div>					
                <group col="4">
                    <field name="employee_id" required="True"/>
                    <field name="contract_id" required="True"/>
                    <field name="input_id" required="True" domain="[('code','=','D_RTF_M1')]"/>
                </group>
                <notebook>
                        <page string="Deduciones">
                            <field name="deductions_rt_id" nolabel="1" widget="section_and_note_one2many">
                                <tree string="deductions_rt_tree" editable="top" >
                                    <field name="date" />
                                    <field name="concept" required="True"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                            <div class="oe_clear"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="hr_withholding_tax_view_tree" model="ir.ui.view">
        <field name="name">hr.withholding.tax.tree</field>
        <field name="model">hr.withholding.tax</field>
        <field name="arch" type="xml">
            <tree string="Retencion en la fuente" >
                <field name="employee_id"/>
                <field name="input_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>		

    <record id="action_hr_withholding_tax" model="ir.actions.act_window">
        <field name="name">Retencion en la fuente</field>
        <field name="res_model">hr.withholding.tax</field>
        <field name="view_mode">tree,form</field>
    </record>	

    <menuitem name="Retencion en la Fuente"
        id="menu_base_hr_withholding_tax"
        parent = "hr.menu_hr_root"
        sequence="70"/>

    <menuitem name="Deduciones"
        parent="hr_payroll_extended.menu_base_hr_withholding_tax"
        id="menu_hr_withholding_tax"
        action="action_hr_withholding_tax"/>

</odoo>
