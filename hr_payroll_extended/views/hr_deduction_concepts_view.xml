<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_deduction_concepts_view_form" model="ir.ui.view">
            <field name="name">hr_deduction_concepts.view.form</field>
            <field name="model">hr_deduction_concepts</field>
            <field name="arch" type="xml">
                <form string="hr_deduction_concepts_form">
                    <sheet>
                        <group>
                            <group>
                            <field name="name"  required="1" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_deduction_concepts_view_tree" model="ir.ui.view">
            <field name="name">hr_deduction_concepts.view.tree</field>
            <field name="model">hr_deduction_concepts</field>
            <field name="arch" type="xml">
                <tree string="hr_deduction_concepts_tree" >
                    <field name="name" required="1" />
                </tree>
            </field>
        </record>

        <record id="hr_deduction_concepts_action" model="ir.actions.act_window">
            <field name="name">Documentacion</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr_deduction_concepts</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_similing_face">
                    Crear conceptos de deduciones
                </p>
            </field>
        </record>

    </data>
</odoo>