<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="currency_rate_field_cop" model="ir.ui.view">
            <field name="name">currency.rate.field.cop</field>
            <field name="model">res.currency.rate</field>
            <field name="inherit_id" ref="base.view_currency_rate_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='rate']" position="before">
                        <field name="value_cop"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>